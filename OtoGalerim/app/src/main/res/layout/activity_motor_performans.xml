<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kafein.otogalerim.MotorPerformans">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motor Performans Bilgilerini girin"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:id="@+id/motorTipiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Motor tipi"/>

    <EditText
        android:id="@+id/motorHacmiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Motor hacmi"/>

    <EditText
        android:id="@+id/AzamiSuratEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Motor hacmi"/>

    <Button
        android:id="@+id/motorBilgisiButon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/menu_buton_back"
        android:text="ileri"/>
    <Button
        android:id="@+id/motorBilgisiButonGeri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/menu_buton_back"
        android:text="Geri"/>

</LinearLayout>
