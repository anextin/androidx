<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ArizaActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bakim Ekrani"
        android:id="@+id/arizaEkrani"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="baslik"
        android:layout_below="@id/arizaEkrani"
        android:id="@+id/baslikAriza"
        android:textSize="28dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="binaadi"
        android:id="@+id/binaadiAriza"
        android:layout_below="@id/baslikAriza"
        android:textSize="28dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seciliArizaAriza"
        android:hint="Seçili arıza: Tarih"
        android:layout_below="@id/binaadiAriza"
        android:textSize="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/ArizaEkraniScrool"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Bina Yetkilisi"/>
            <EditText
                android:id="@+id/binayetkiliEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Arıza Sebebi"/>
            <EditText
                android:id="@+id/ArizaSebebiEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arıza Kodu"/>
            <EditText
                android:id="@+id/ArızaKoduEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Değişen Parçalar"/>
            <EditText
                android:id="@+id/DegisenParcalar"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tel"/>
            <EditText
                android:id="@+id/TelEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"

                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-posta"/>
            <EditText
                android:id="@+id/EpostaEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"

                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mesaj"/>
            <EditText
                android:id="@+id/MesajEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:hint="Mesajınız"
                android:textColorHint="@color/colorPrimaryDark"/>



            <Button
                android:id="@+id/OnayButon"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mybutton"
                android:text="Onay"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>