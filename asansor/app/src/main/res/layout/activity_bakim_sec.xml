<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/deneme"
    android:layout_height="match_parent"
    tools:context="com.example.ext.asansor.Activities.BakimSecActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="QR Code"
            android:background="@drawable/mybutton"
            android:id="@+id/QRCodeBakim"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="asansor id manual giris"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:id="@+id/manualgirisEditText"
            android:gravity="center"
            android:textColor="#fff"
            android:hint="id"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/mybutton"
            android:id="@+id/manualgirisOnayButton"
            android:text="Onay"/>
    </LinearLayout>

</LinearLayout>
