<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kapak"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asansör"
            android:id="@+id/isim"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#212121"
            android:padding="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/isim"
            android:layout_gravity="center"
            android:background="#212121" />



    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#C0C0C0"
            android:padding="8dp"
            android:id="@+id/tahsilatYapButton"
            android:text="Tahsilat Yap" />

        <Button
            android:id="@+id/arizaTanimlaButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:textColor="#C0C0C0"
            android:padding="8dp"
            android:textSize="12dp"
            android:text="Arıza Tanımlama" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:paddingBottom="12dp"
            android:textColor="#C0C0C0"
            android:padding="8dp"
            android:textStyle="bold"
            android:id="@+id/yapilacakBakimlarButton"
            android:textSize="12dp"
            android:text="Yapılacak bakımlar" />

        <Button
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:paddingBottom="12dp"
            android:textColor="#C0C0C0"
            android:textStyle="bold"
            android:id="@+id/bekleyenArizalarButton"
            android:textSize="12dp"
            android:text="Bekleyen Arızalar" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"

            android:gravity="center"
            android:background="@drawable/mybutton"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:textColor="#ecf0f1"
            android:textSize="12dp"
            android:id="@+id/bakimEksikleriButton"
            android:text="BAKIM EKSİKLERİ"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"

            android:gravity="center"
            android:background="@drawable/mybutton"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:textColor="#ecf0f1"
            android:textSize="12dp"
            android:id="@+id/bakimButton"
            android:text="BAKIM"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"

            android:gravity="center"
            android:background="@drawable/mybutton"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            android:textColor="#ecf0f1"
            android:textSize="12dp"
            android:id="@+id/arizaButton"
            android:text="ARIZA"/>


    </LinearLayout>

</LinearLayout>