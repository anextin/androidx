<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    tools:context=".Activities.BakimActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bakim Ekrani"
        android:id="@+id/bakimEkrani"
        android:textSize="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="baslik"
        android:textColor="#fff"
        android:layout_below="@id/bakimEkrani"
        android:id="@+id/baslikBakim"
        android:textSize="28dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="binaadi"
        android:textColor="#fff"
        android:id="@+id/binaadiBakim"
        android:layout_below="@id/baslikBakim"
        android:textSize="28dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tarihBakim"
        android:textColor="#fff"
        android:text="secilibakim: Tarih"
        android:layout_below="@id/binaadiBakim"
        android:textSize="20dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/BakimEkraniScrool"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Yapılması Gereken İşlemler"/>
        <EditText
            android:id="@+id/YapilmaliEditText"
            android:layout_width="280dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:background="#fff"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="40dp"
            android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutar"/>
            <EditText
                android:id="@+id/TutarEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:hint="100.00"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="BinaYetkilisi"/>
            <EditText
                android:id="@+id/BinaYetkilisiEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Açıklama"/>
            <EditText
                android:id="@+id/AcıklamaEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Tel"/>
            <EditText
                android:id="@+id/TelEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"

                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="E-posta"/>
            <EditText
                android:id="@+id/EpostaEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"

                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Mesaj"/>
            <EditText
                android:id="@+id/MesajEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:hint="Mesajınız"
                android:textColorHint="@color/colorPrimaryDark"/>



            <Button
                android:id="@+id/OnayButon"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/mybutton"
                android:text="Onay"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>