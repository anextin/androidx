<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="3dp"
    android:layout_margin="3dp"
    android:background="#EEEEEE"
    android:id="@+id/ilanLinearLayout"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1.1"
        android:layout_height="100dp"

        android:id="@+id/BekleyenArizalarResim"
        />

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:layout_marginLeft="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:text="baslik"
            android:textColor="#0F3057"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:id="@+id/BekleyenArizalarbaslik"/>
        <TextView
            android:layout_width="match_parent"
            android:text="konu"
            android:textColor="#0F3057"
            android:textSize="20dp"

            android:layout_below="@+id/BekleyenArizalarbaslik"
            android:layout_height="wrap_content"
            android:id="@+id/BekleyenArizalarkonu"/>

        <TextView
            android:layout_width="match_parent"
            android:text="yetkili"
            android:textColor="#0F3057"
            android:textSize="16dp"
            android:layout_below="@+id/BekleyenArizalarkonu"
            android:layout_height="wrap_content"
            android:id="@+id/BekleyenArizalaryetkili"/>
        <TextView
            android:layout_width="match_parent"
            android:text="tel"
            android:textColor="#0F3057"
            android:textSize="16dp"
            android:layout_below="@+id/BekleyenArizalaryetkili"
            android:layout_height="wrap_content"
            android:id="@+id/BekleyenArizalartel"/>

        <TextView
            android:layout_width="match_parent"
            android:text="donemtarihi"
            android:textColor="#0F3057"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:gravity="right|bottom"

            android:layout_height="wrap_content"
            android:id="@+id/BekleyenArizalardonemtarihi"/>
    </RelativeLayout>

</LinearLayout>
