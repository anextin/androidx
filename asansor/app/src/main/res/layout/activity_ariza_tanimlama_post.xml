<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    tools:context="com.dev.ext.asansor.Activities.ArizaTanimlamaPostActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arıza Tanımlama Ekrani"
        android:textSize="20dp"

        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arıza Tanımlama"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BinaAdiEditText"
        android:textColor="#fff"
        android:textSize="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AsansorAdiEditText"
        android:textColor="#fff"
        android:textSize="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#fff" />

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/BakimEkraniScrool"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Arayan Kişi"/>
            <EditText
                android:id="@+id/ArayanKisiEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="Arayan Tel"/>
            <EditText
                android:id="@+id/ArayanTelEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>


            <TextView

                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:id="@+id/tarihTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arıza Tarihi"/>
            <Button

                android:layout_width="wrap_content"
                android:text="ariza tarihi seç"
                android:id="@+id/tarihButton"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:id="@+id/saatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arıza saati"/>
            <Button

                android:layout_width="wrap_content"
                android:text="ariza saati seç"
                android:id="@+id/saatButton"
                android:layout_height="wrap_content" />



            <TextView

                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arıza Konusu"/>
            <EditText
                android:id="@+id/ArizaKonusuEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"
                android:textColorHint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Açıklama"/>
            <EditText
                android:id="@+id/AcıklamaEditText"
                android:layout_width="280dp"
                android:shadowColor="@color/colorPrimaryDark"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="40dp"

                android:textColorHint="@color/colorPrimaryDark"/>


            <Button
                android:id="@+id/OnayButon"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:background="@drawable/mybutton"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Onay"/>


        </LinearLayout>
    </ScrollView>


</LinearLayout>