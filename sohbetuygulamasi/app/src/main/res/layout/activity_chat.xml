<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivity.ChatActivity">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_chat"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        card_view:cardBackgroundColor="#216583"
        card_view:cardElevation="10dp"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:id="@+id/backbutton"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/leftarrow"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/userimage"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/chat_username_textview"
                android:gravity="left"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"

                android:layout_weight="10"/>



            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="16dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/user_state_img"
                android:layout_height="16dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/card_view_chat"
        android:layout_above="@id/linear"
        android:id="@+id/chat_recycler_view"
        android:background="@drawable/background_image_chat"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:gravity="center"
            android:background="#216583"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="Mesaj gir"
                android:background="@drawable/mybutton"
                android:id="@+id/mesajTextEdittext"
                android:minHeight="40dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="12dp"
                android:inputType="text"
                />

            <Button
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:background="@drawable/mybuttonsend"
                android:id="@+id/sendMessageButton"

                android:layout_weight="1"/>
        </LinearLayout>


</RelativeLayout>